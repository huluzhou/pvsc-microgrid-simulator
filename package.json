{
  "name": "pvsc-microgrid-simulator",
  "version": "0.1.0",
  "description": "光储充微电网模拟器",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "pack:python": "python pack_python_kernel.py",
    "ensure-kernel-dir": "node -e \"const fs=require('fs');const p='dist/python-kernel';if(!fs.existsSync(p)){fs.mkdirSync(p,{recursive:true});fs.writeFileSync(p+'/.gitkeep','');}\"",
    "build:release": "npm run pack:python && npm run build && npm run tauri:build"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.0",
